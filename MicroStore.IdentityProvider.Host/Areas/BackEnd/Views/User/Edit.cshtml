@model MicroStore.IdentityProvider.Host.Areas.BackEnd.Models.Users.EditUserModel
<div class="content-wrapper mr-2">
    <!-- Content Header (Page header) -->
    <form method="post" asp-action="Edit">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x=> x.Id)
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Edit User - {@Model.Email}</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <button class="btn btn-info" type="submit">
                                    <i class="fas
                                fa-plus-square mr-1"></i> Save
                                </button>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="container-fluid">
                <div class="text-center mb-3">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                </div>

                <partial name="_CreateOrUpdate.Info" model = "Model" />
                <partial name="_CreateOrUpdate.Roles" model = "Model" />
                <partial name="_CreateOrUpdate.Password" model = "Model" />

            </div>
        </div>
    </form>

</div>

@section Scripts{
    <script>
        $(document).ready(function(){


            $("#RoleSelect").bootstrapDualListbox()
        })
    </script>
}