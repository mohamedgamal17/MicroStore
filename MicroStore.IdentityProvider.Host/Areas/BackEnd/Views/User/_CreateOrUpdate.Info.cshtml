@model MicroStore.IdentityProvider.Identity.Application.Models.UserModel

<div class="card">
    <div class="card-header">
        <p class="card-title text-lg "><i class="fas fa-info mr-1 text-lightblue"></i>User Info</p>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </div>
    <div class="card-body">


        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                  <micro-label asp-for="@Model.GivenName"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.GivenName" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.GivenName">
                </span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.FamilyName"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.FamilyName" id="ShortDescription" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.FamilyName">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.Email"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.Email" id="ShortDescription" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.Email">
                </span>
            </div>
        </div>
        
        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.PhoneNumber"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.PhoneNumber" id="ShortDescription" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.PhoneNumber">
                </span>
            </div>
        </div>
     </div>
</div>

