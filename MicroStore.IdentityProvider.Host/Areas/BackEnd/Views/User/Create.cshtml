@model MicroStore.IdentityProvider.Identity.Application.Models.UserModel

<div class="content-wrapper mr-2">
    <!-- Content Header (Page header) -->
    <form method="post" asp-action="Create">
        @Html.AntiForgeryToken()
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Create User</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <button class="btn btn-info" type="submit">
                                    <i class="fas
                                fa-plus-square mr-1"></i> Save
                                </button>
                            </li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <div class="content">
            <div class="container-fluid">
                <div class="text-center mb-3">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                </div>

                <partial name="_CreateOrUpdate.Info" model = "Model" />
                <partial name="_CreateOrUpdate.Roles" model = "Model" />
                <partial name="_CreateOrUpdate.Password" model = "Model" />

            </div>
        </div>
    </form>

</div>


@section Scripts{
<script>
    $(document).ready(function(){
        $("#RoleSelect").select2({
            placeholder: 'select user roles'
        });

    })
</script>
}