@model MicroStore.IdentityProvider.Host.Areas.BackEnd.Models.ApiScopes.ApiScopeUIModel

<abp-card>
    <abp-card-header>
        <abp-card-title class="text-lg"><i class="fas fa-info mr-1 text-lightblue"></i> Api Scope Info </abp-card-title>
            <p class="card-title text-lg "></p>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </abp-card-header>
    <abp-card-body>
              <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                  <micro-label asp-for="@Model.Name"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <input asp-for="@Model.Name" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.Name">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                  <micro-label asp-for="@Model.DisplayName"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <input asp-for="@Model.DisplayName" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.DisplayName">
                </span>
            </div>
        </div>

        
        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                  <micro-label asp-for="@Model.Description"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <input asp-for="@Model.Description"  class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.Description">
                </span>
            </div>
        </div>

         <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                  <micro-label asp-for="@Model.Emphasize"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <input asp-for="@Model.Emphasize"  class="check-box" />

                <span class="text-danger" asp-validation-for="@Model.Emphasize">
                </span>
            </div>
        </div>

         <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                  <micro-label asp-for="@Model.ShowInDiscoveryDocument"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <input asp-for="@Model.ShowInDiscoveryDocument"  class="check-box"  />

                <span class="text-danger" asp-validation-for="@Model.ShowInDiscoveryDocument">
                </span>
            </div>
        </div>
    </abp-card-body>
</abp-card>
