@model MicroStore.IdentityProvider.Host.Areas.BackEnd.Models.Roles.RoleListModel

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Dashboard v3</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-action="Create" class="btn btn-info">
                                <i class="fas fa-plus-square mr-1"></i>
                                Create Role
                            </a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <partial name="Grids/_Grid.Roles" model="Model" />
        </div>
    </section>
</div>

@section Scripts{
    <script>
    $(document).ready(function(){
        $("#RolesGrid").DataTable({
            ajax : {
                    type : "POST"
                },
            processing  : true,
            filter : true,
            paging : false,
            columns:[
                {data : "name" , name : "@(Html.DisplayNameFor(x=> x.Data.First().Name))"},
                {data : "description" , name : "@(Html.DisplayNameFor(x=> x.Data.First().Description))"},
                 {mRender : function(data,type , row){
                        return `<a href="Role/Edit/${row.id}" class="btn btn-info">Edit</a>`
                  }}
            ]
        })
    })
</script>
}
