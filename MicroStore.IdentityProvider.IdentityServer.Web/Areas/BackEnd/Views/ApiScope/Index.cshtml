@model MicroStore.IdentityProvider.IdentityServer.Web.Areas.BackEnd.Models.ApiScopes.ApiScopeListViewModel
@{
    ViewData["Title"] = "ApiScopes / Backend";
    UIMenuNavigationManager.SetCurrentMenu(IdentityServerMenuStandard.ApiScopeMenu.Index);
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <abp-row class="mb-2">
                <abp-column size-sm="_6">
                    <h1 class="m-0">Api Scope</h1>
                </abp-column>
                <abp-column size-sm="_6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-action="Create" class="btn btn-info">
                                <i class="fas fa-plus-square mr-1"></i>
                                Create Api Scope
                            </a>
                        </li>
                    </ol>
                </abp-column>
            </abp-row>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <partial name="_ApiScope.AdvacnedSearch" model="Model" />
            <abp-card>
                <abp-card-body>
                    <abp-table id="ApiScopeTable"></abp-table>
                </abp-card-body>
            </abp-card>      
        </div>
    </section>
</div>

@section Scripts{
    <script src="~/backend/js/apiscope/index.js"></script>
}