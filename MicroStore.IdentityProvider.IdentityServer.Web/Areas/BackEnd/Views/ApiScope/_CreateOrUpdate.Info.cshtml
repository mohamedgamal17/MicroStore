@model  MicroStore.IdentityProvider.IdentityServer.Web.Areas.BackEnd.Models.ApiScopes.CreateOrEditApiScopeModel
<abp-card>
    <abp-card-header>
        <abp-card-title class="text-lg"><i class="fas fa-info mr-1 text-lightblue"></i> Api Scope Info </abp-card-title>
        <p class="card-title text-lg "></p>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </abp-card-header>
    <abp-card-body>
        <abp-row class="form-group mb-3">
            <abp-column size-sm="_3" class="text-right">
                <micro-label asp-for="@Model.Name"></micro-label>
            </abp-column>
            <abp-column size-sm="_9">
                <input asp-for="@Model.Name" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.Name"></span>
            </abp-column>
        </abp-row>
        <abp-row class="form-group mb-3">
            <abp-column size-sm="_3" class="text-right">
                <micro-label asp-for="@Model.DisplayName"></micro-label>
            </abp-column>
            <abp-column size-sm="_9">
                <input asp-for="@Model.DisplayName" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.DisplayName"></span>
            </abp-column>
        </abp-row>
        <abp-row class="form-group mb-3">
            <abp-column size-sm="_3" class="text-right">
                <micro-label asp-for="@Model.Description"></micro-label>
            </abp-column>
            <abp-column size-sm="_9">
                <input asp-for="@Model.Description" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.Description"></span>
            </abp-column>
        </abp-row>
        <abp-row class="form-group mb-3">
            <abp-column size-sm="_3" class="text-right">
                <micro-label asp-for="@Model.Emphasize"></micro-label>
            </abp-column>
            <abp-column size-sm="_9">
                <div class="form-switch">
                    <input asp-for="@Model.Emphasize" class="form-check-input" type="checkbox" >
                </div>
                <span class="text-danger" asp-validation-for="@Model.Emphasize"></span>
            </abp-column>
        </abp-row>
        <abp-row class="form-group mb-3">
            <abp-column size-sm="_3" class="text-right">
                <micro-label asp-for="@Model.ShowInDiscoveryDocument"></micro-label>
            </abp-column>
            <abp-column size-sm="_9">
                <div class="form-switch">
                    <input asp-for="@Model.ShowInDiscoveryDocument" class="form-check-input" type="checkbox">
                </div>
                <span class="text-danger" asp-validation-for="@Model.ShowInDiscoveryDocument"></span>
            </abp-column>
        </abp-row>
    </abp-card-body>
</abp-card>
