@model MicroStore.IdentityProvider.IdentityServer.Web.Areas.BackEnd.Models.Clients.EditClientModel

<abp-card>
    <abp-card-header>
        <abp-card-title class="text-lg"><i class="fas fa-info mr-1 text-lightblue"></i> Client Grants</abp-card-title>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </abp-card-header>
    <abp-card-body>
        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.AllowedGrantTypes"></micro-label>
                </div>

            </div>
            <div class="col-sm-9 row overflow-hidden">
                @for (int index = 0; index < Model.AllowedGrantTypes.Count; index++)
                {
                    <div class="col-md-6 col-sm-12">
                        <div class="form-check">
                            <input asp-for="@Model.AllowedGrantTypes[index].Selected" id="@Model.AllowedGrantTypes[index].Value" class="form-check-input" type="checkbox" />
                            <input type="hidden" asp-for="@Model.AllowedGrantTypes[index].Value">
                            <label class="form-check-label" for="@Model.AllowedGrantTypes[index].Value">
                                @Model.AllowedGrantTypes[index].Value</label>
                        </div>
                    </div>
                }
                <span class="text-danger" asp-validation-for="@Model.IdentityTokenLifetime">
                </span>
            </div>
        </div>
    </abp-card-body>
</abp-card>