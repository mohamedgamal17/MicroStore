@model MicroStore.IdentityProvider.IdentityServer.Web.Areas.BackEnd.Models.Clients.EditClientUIModel
<abp-card>
    <abp-card-body>
        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.ClientId"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.ClientId" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.ClientId">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.ClientName"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.ClientName" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.ClientName">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.ClientUri"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.ClientUri" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.ClientUri">
                </span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.LogoUri"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.LogoUri" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.LogoUri">
                </span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.Description"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <textarea asp-for="@Model.Description" id="name" class="form-control" rows="4" > </textarea>

                <span class="text-danger" asp-validation-for="@Model.Description">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.RequireConsent"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.RequireConsent" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.RequireConsent">
                </span>
            </div>
        </div>


        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.AllowRememberConsent"></micro-label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.AllowRememberConsent" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.AllowRememberConsent">
                </span>
            </div>
        </div>
    </abp-card-body>

</abp-card>
