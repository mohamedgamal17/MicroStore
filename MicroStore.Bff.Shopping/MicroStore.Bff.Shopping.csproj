<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Protos\Billing\payment.proto" />
    <None Remove="Protos\Catalog\category.proto" />
    <None Remove="Protos\Catalog\manufacturer.proto" />
    <None Remove="Protos\Catalog\product.proto" />
    <None Remove="Protos\Catalog\tag.proto" />
    <None Remove="Protos\country.proto" />
    <None Remove="Protos\Profiling\profile.proto" />
    <None Remove="Protos\Shipping\address.proto" />
    <None Remove="Protos\Shipping\rates.proto" />
    <None Remove="Protos\Shipping\shipment.proto" />
    <None Remove="Protos\stateProvince.proto" />
  </ItemGroup>

  <ItemGroup>
	<PackageReference Include="IdentityModel" Version="6.0.0" />
	<PackageReference Include="IdentityModel.AspNetCore" Version="4.3.0" />
	<PackageReference Include="IdentityModel.AspNetCore.OAuth2Introspection" Version="6.2.0" />
	<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="6.0.11" />
    <PackageReference Include="Google.Protobuf" Version="3.25.2" />
    <PackageReference Include="Grpc.AspNetCore.Server.ClientFactory" Version="2.60.0" />
    <PackageReference Include="Grpc.Net.Client" Version="2.60.0" />
    <PackageReference Include="Grpc.Tools" Version="2.60.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MicroStore.BuildingBlocks.AspNetCore\MicroStore.BuildingBlocks.AspNetCore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Protos\Billing\payment.proto" GrpcServices="Client" />
    <Protobuf Include="Protos\Catalog\category.proto" GrpcServices="Client">
      <AdditionalImportDirs>\protos</AdditionalImportDirs>
    </Protobuf>
    <Protobuf Include="Protos\Catalog\manufacturer.proto" GrpcServices="Client">
      <AdditionalImportDirs>\protos</AdditionalImportDirs>
    </Protobuf>
    <Protobuf Include="Protos\Catalog\product.proto" GrpcServices="Client" />
    <Protobuf Include="Protos\Catalog\tag.proto" GrpcServices="Client" />
    <Protobuf Include="Protos\Geographic\country.proto" GrpcServices="Client" />
    <Protobuf Include="Protos\Geographic\stateProvince.proto" GrpcServices="Client" />
    <Protobuf Include="Protos\Profiling\profile.proto" GrpcServices="Client" />
    <Protobuf Include="Protos\Shipping\address.proto" GrpcServices="Client" />
    <Protobuf Include="Protos\Shipping\rates.proto" GrpcServices="Client" />
    <Protobuf Include="Protos\Shipping\shipment.proto" GrpcServices="Client" />
  </ItemGroup>

</Project>
