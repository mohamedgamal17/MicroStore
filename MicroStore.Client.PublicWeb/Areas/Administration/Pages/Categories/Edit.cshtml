@page  "/categories/Edit/{categoryId}"
@model MicroStore.Client.PublicWeb.Areas.Administration.Pages.Categories.EditModel
@{
}
<div class="content-wrapper mr-2">
    <!-- Content Header (Page header) -->
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Edit category details - @Model.CategoryModel.CategoryName</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <button class="btn btn-info" type="submit">
                                    <i class="fas
                                fa-plus-square mr-1"></i> Save
                                </button>
                            </li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <div class="content">
            <div class="container-fluid">

                    <div class="card clearfix">
                        <div class="card-header">
                            <p class="card-title text-lg "><i class="fas fa-info mr-1 text-lightblue"></i> Category Info</p>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-3">
                                @Html.ValidationSummary()
                            </div>

                            <div class="form-group row mb-3">
                                <div class="col-sm-3">
                                <div class="float-sm-left float-md-right">
                                        <label class="col-form-label"
                                               asp-for="@Model.CategoryModel.CategoryName">Category Name <i class="fas fa-question-circle text-lightblue "></i></label>
                                    </div>

                                </div>
                                <div class="col-sm-8">
                                    <input asp-for="@Model.CategoryModel.CategoryName" id="name" class="form-control" />

                                    <span class="text-danger" asp-validation-for="@Model.CategoryModel.CategoryName">
                                    </span>
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                <div class="col-sm-3">
                                <div class="float-sm-left float-md-right">
                                        <label class="col-form-label"
                                               asp-for="@Model.CategoryModel.Description">Short description <i class="fas fa-question-circle text-lightblue "></i></label>
                                    </div>

                                </div>
                                <div class="col-sm-8">
                                    <input asp-for="@Model.CategoryModel.Description" id="ShortDescription" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.CategoryModel.Description">
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>


            </div>
        </div>
    </form>

</div>