@page "{shipmentId}"
@model MicroStore.Client.PublicWeb.Areas.Administration.Pages.Shipments.PurchaseLabelModel
@{
}

<div class="content-wrapper mr-2">
    <!-- Content Header (Page header) -->
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Purshase shipment label </h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <button class="btn btn-info" type="submit">
                                    <i class="fas
                                fa-plus-square mr-1"></i> Purshase
                                </button>
                            </li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <p class="card-title text-lg "><i class="fas fa-info mr-1 text-lightblue"></i> Shipment Rate</p>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="text-center mb-3">
                                    @Html.ValidationSummary()
                                </div>
                                <div class="form-group ">
                                    <div class="overflow-hidden">

                                        <div class="list-group clearfix overflow-auto " style="max-height : 400px">

                                            @foreach(var rate in Model.ShipmentRates)
                                            {
                                                <div class="list-group-item list-group-item-action" data-id= "@rate.Id">
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <h5 class="mb-1">@rate.ServiceLevel.Name</h5>
                                                        <small>$@rate.Amount.Value</small>
                                                    </div>
                                                    <small>@rate.Days days</small>
                                                </div>
                                            }
                                            
                                        </div>

                                        <input type="hidden" id="shipmentrateid" asp-for="@Model.ShipmentRateId" />
                 
                                        <span class="text-danger" asp-validation-for="@Model.ShipmentRateId">
                                        </span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <p class="card-title text-lg "><i class="fas fa-info mr-1 text-lightblue"></i> Order Summary</p>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="text-center mb-3">
                                    @Html.ValidationSummary()
                                </div>
                                <div class="form-group row mb-3">
                                    <div class="col-sm-3">
                                        <div class="float-sm-left float-md-right">
                                            <micro-label class="col-form-label"
                                                   asp-for="@Model.Order.Id"></micro-label>
                                        </div>

                                    </div>
                                    <div class="col-sm-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.Id
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row mb-3">
                                    <div class="col-sm-3">
                                        <div class="float-sm-left float-md-right">
                                            <micro-label class="col-form-label"
                                                   asp-for="@Model.Order.OrderNumber"></micro-label>
                                        </div>

                                    </div>
                                    <div class="col-sm-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.OrderNumber
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group row mb-3">
                                    <div class="col-sm-3">
                                        <div class="float-sm-left float-md-right">
                                            <micro-label class="col-form-label"
                                                   asp-for="@Model.Order.TaxCost"></micro-label>
                                        </div>

                                    </div>
                                    <div class="col-sm-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.TaxCost
                                        </div>
                                    </div>
                                </div>



                                <div class="form-group row mb-3">
                                    <div class="col-sm-3">
                                        <div class="float-sm-left float-md-right">
                                            <micro-label class="col-form-label"
                                                   asp-for="@Model.Order.ShippingCost"></micro-label>
                                        </div>

                                    </div>
                                    <div class="col-sm-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.ShippingCost
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group row mb-3">
                                    <div class="col-sm-3">
                                        <div class="float-sm-left float-md-right">
                                            <micro-label class="col-form-label"
                                                   asp-for="@Model.Order.SubTotal"></micro-label>
                                        </div>

                                    </div>
                                    <div class="col-sm-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.SubTotal
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group row mb-3">
                                    <div class="col-sm-3">
                                        <div class="float-sm-left float-md-right">
                                            <micro-label class="col-form-label"
                                                   asp-for="@Model.Order.TotalPrice"></micro-label>
                                        </div>

                                    </div>
                                    <div class="col-sm-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.TotalPrice
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>
@section Scripts{
    <script>
        $(".list-group-item").on('click', function(){

            $(".list-group-item").removeClass("active");
            $(this).addClass("active");
            var shipmentrateId = $(this).attr("data-id");

            $("#shipmentrateid").val(shipmentrateId);
        })
    </script>
}