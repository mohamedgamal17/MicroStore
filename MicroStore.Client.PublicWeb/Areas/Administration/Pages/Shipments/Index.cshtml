@page
@model MicroStore.Client.PublicWeb.Areas.Administration.Pages.Shipments.IndexModel
@{
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Shipments</h1>
                </div><!-- /.col -->
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-body">
                    @if (Model.Shipments != null || Model.Shipments?.TotalCount > 0)
                    {
                        <table class="table  table-hover table-striped  dataTable no-footer" width="100%">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayFor(x=> x.Shipments.Items.First().OrderId)</th>
                                    <th>@Html.DisplayFor(x=> x.Shipments.Items.First().OrderNumber)</th>
                                    <th>@Html.DisplayFor(x=> x.Shipments.Items.First().UserId)</th>
                                    <th>@Html.DisplayFor(x=> x.Shipments.Items.First().Status)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var shipment in Model.Shipments.Items)
                                {
                                    <tr>
                                        <td>@shipment.OrderId</td>
                                        <td>@shipment.OrderNumber</td>
                                        <td>@shipment.UserId</td>
                                        <td>@shipment.Status</td>
                                        <td><button class="btn btn-info">View</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h4 class=" text-center">There is no products yet</h4>
                    }


                </div>
            </div>
        </div>
    </section>
</div>