@page
@model MicroStore.Client.PublicWeb.Areas.Administration.Pages.Shipments.DetailModel
@{
}
<div class="content-wrapper mr-2">
    <div class="content-header clearfix p-3">
        <div class=" float-left">
            <h1 class="text-xl">View payment request details - 3</h1>
        </div>
        <div class="float-right ml-3">
            <a class="btn btn-info text-lg ml-3">
                <i class="fas fa-plus-square mr-1"></i> Save                                
            </a>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">

            <div class="cards clearfix">
                <div class="card ">

                    <div class="card-body ">
                        <div class="card card-light mb-3 shadow">
                            <div class="card-header border-0">
                                <h1 class="card-title text-md
                                                text-lg">
                                    Payment Request Info
                                </h1>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus text-lg"></i>

                                    </button>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Shipment.Id" />
                                            <div title="" data-toggle="tooltip" class="ui-icon-help d-inline ml-1  text-lightblue">
                                                <i class="fas fa-question-circle"></i>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Shipment.Id
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Shipment.OrderId" />
                                            <div title="" data-toggle="tooltip" class="ui-icon-help d-inline ml-1  text-lightblue">
                                                <i class="fas fa-question-circle"></i>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Shipment.OrderId
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Shipment.UserId" />
                                            <div title="" data-toggle="tooltip" class="ui-icon-help d-inline ml-1  text-lightblue">
                                                <i class="fas fa-question-circle"></i>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Shipment.UserId
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Shipment.Status" />
                                            <div title="" data-toggle="tooltip" class="ui-icon-help  d-inline ml-1 text-lightblue">
                                                <i class="fas fa-question-circle"></i>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Shipment.Status
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Shipment.SystemName" />
                                            <div title="" data-toggle="tooltip" class="ui-icon-help d-inline ml-1  text-lightblue">
                                                <i class="fas fa-question-circle"></i>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Shipment.SystemName
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Shipment.ShipmentExternalId" />
                                            <div title="" data-toggle="tooltip" class="ui-icon-help d-inline ml-1  text-lightblue">
                                                <i class="fas fa-question-circle"></i>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Shipment.ShipmentExternalId
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Shipment.ShipmentLabelExternalId" />
                                            <div title="" data-toggle="tooltip" class="ui-icon-help d-inline ml-1  text-lightblue">
                                                <i class="fas fa-question-circle"></i>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Shipment.ShipmentLabelExternalId
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Shipment.TrackingNumber" />
                                            <div title="" data-toggle="tooltip" class="ui-icon-help d-inline ml-1  text-lightblue">
                                                <i class="fas fa-question-circle"></i>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Shipment.TrackingNumber
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>


                <div class="card card-light shadow mt-3">
                    <div class="card-header border-0">
                        <h1 class="card-title text-md  text-lg font-weight-bold">
                                               
                            Payment Items
                        </h1>
                        <div class="card-tools">
                            <button type="button" class="btn  btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus text-lg"></i>

                            </button>
                        </div>
                    </div>

                    <div class="card-body">
                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(x=> x.Shipment.Items.First().Thumbnail)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Shipment.Items.First().ProductId)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Shipment.Items.First().Name)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Shipment.Items.First().Sku)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Shipment.Items.First().Quantity)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Shipment.Items.First().UnitPrice)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Shipment.Items.First().Weight)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Shipment.Items.First().Dimension)</th>
                                </tr>
                            </thead>>
                            <tbody>
                                @foreach (var item in Model.Shipment.Items)
                                {
                                    <tr>
                                        <td>@item.Thumbnail</td>
                                        <td>@item.ProductId</td>
                                        <td>@item.Sku</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.UnitPrice</td>
                                        <td>@item.Weight?.Value (@item.Weight?.Unit)</td>
                                        <td>
                                            Lenght  : item.Dimension?.Lenght (@item.Dimension?.Unit) <br>
                                            Width  : item.Dimension?.Lenght (@item.Dimension?.Unit) <br>
                                            Height  : item.Dimension?.Lenght (@item.Dimension?.Unit) <br>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card card-light shadow mt-3">
                    <div class="card-header border-0">
                        <h1 class="card-title text-md  text-lg font-weight-bold">

                            Shipping Address
                        </h1>
                        <div class="card-tools">
                            <button type="button" class="btn  btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus text-lg"></i>

                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover text-lg  table-bordered">                                                                                                                     
                            <thead>
                                <tr>
                                    <th colspan="2">
                                        Billing
                                        Address
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(x=> x.Shipment.Address.Name)
                                    </td>
                                    <td>
                                        @Model.Shipment.Address.Name
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(x=> x.Shipment.Address.Phone)
                                    </td>
                                    <td>
                                        @Model.Shipment.Address.Phone
                                    </td>
                                </tr>

                           

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(x=> x.Shipment.Address.CountryCode)
                                    </td>
                                    <td>
                                        @Model.Shipment.Address.CountryCode
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(x=> x.Shipment.Address.State)
                                    </td>
                                    <td>
                                        @Model.Shipment.Address.State
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(x=> x.Shipment.Address.AddressLine1)
                                    </td>
                                    <td>
                                        @Model.Shipment.Address.AddressLine1
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(x=> x.Shipment.Address.AddressLine2)
                                    </td>
                                    <td>
                                        @Model.Shipment.Address.AddressLine2
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

