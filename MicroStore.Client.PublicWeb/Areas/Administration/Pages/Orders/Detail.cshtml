@page "{orderId}"
@using MicroStore.ShoppingGateway.ClinetSdk.Entities.Orderes;
@using MicroStore.ShoppingGateway.ClinetSdk.Entities.Shipping;
@model MicroStore.Client.PublicWeb.Areas.Administration.Pages.Orders.DetailModel
@{
}
<div class="content-wrapper mr-2">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">
                        View order details - @Model.Order.Id
                    </h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">

                        @if(Model.Order.CurrentState == OrderState.Approved)
                        {
                            <li class="breadcrumb-item">

                                <form asp-page-handler="CreateShipment" method="post">

                                    @Html.AntiForgeryToken()

                                    <button class="btn btn-info" type="submit">
                                        <i class="fas
                                fa-plus-square mr-1"></i> Create Order Shipment
                                    </button>
                                </form>
                          
                             
                            </li>
                        }
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <div class="content">
        <div class="container-fluid">

            <div class="cards clearfix">
                <div class="card ">

                    <div class="card-body ">
                        <div class="card card-light mb-3 shadow">
                            <div class="card-header border-0">
                                <h1 class="card-title text-md
                                                text-lg">
                                    Order Info
                                </h1>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus text-lg"></i>

                                    </button>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Order.Id" />
     
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.Id
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Order.OrderNumber" />
         
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.OrderNumber
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Order.UserId" />
                        
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.UserId
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Order.TaxCost" />
                              
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.TaxCost
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Order.ShippingCost" />
                      
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.ShippingCost
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Order.SubTotal" />
                                 
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.SubTotal
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Order.TotalPrice" />
                         
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.TotalPrice
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-3 clearfix">
                                        <div class="float-right">
                                            <micro-label asp-for="@Model.Order.CurrentState" />
              
                                        </div>

                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text text-lg" style="padding-top: 2px">
                                            @Model.Order.CurrentState
                                        </div>

                                  
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card card-light shadow mt-3">
                    <div class="card-header border-0">
                        <h1 class="card-title text-md  text-lg font-weight-bold">
                            Billing & Shiping                                               
                        </h1>
                        <div class="card-tools">
                            <button type="button" class="btn  btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus text-lg"></i>

                            </button>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <table class="table table-hover table-bordered">
                                            <thead>
                                                <tr>
                                                    <th colspan="2">
                                                        @Html.DisplayNameFor(x=> x.Order.BillingAddress)
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.BillingAddress.Name)
                                                    </td>
                                                    <td>
                                                        @Model.Order.BillingAddress.Name
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.BillingAddress.Phone)
                                                    </td>
                                                    <td>
                                                        @Model.Order.BillingAddress.Phone
                                                    </td>
                                                </tr>



                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.BillingAddress.Country.Name)
                                                    </td>
                                                    <td>
                                                        @Model.Order.BillingAddress.Country.Name
                                                    </td>
                                                </tr>
                        

                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.BillingAddress.City)
                                                    </td>
                                                    <td>
                                                        @Model.Order.BillingAddress.City
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.BillingAddress.State.Name)
                                                    </td>
                                                    <td>
                                                        @Model.Order.BillingAddress.State.Name
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.BillingAddress.AddressLine1)
                                                    </td>
                                                    <td>
                                                        @Model.Order.BillingAddress.AddressLine1
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.BillingAddress.AddressLine2)
                                                    </td>
                                                    <td>
                                                        @Model.Order.BillingAddress.AddressLine2
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <table class="table table-hover   table-bordered">
                                            <thead>
                                                <tr>
                                                    <th colspan="2">
                                                        @Html.DisplayNameFor(x=> x.Order.ShippingAddress)
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.ShippingAddress.Name)
                                                    </td>
                                                    <td>
                                                        @Model.Order.ShippingAddress.Name
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.ShippingAddress.Phone)
                                                    </td>
                                                    <td>
                                                        @Model.Order.ShippingAddress.Phone
                                                    </td>
                                                </tr>



                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.ShippingAddress.Country.Name)
                                                    </td>
                                                    <td>
                                                        @Model.Order.ShippingAddress.Country.Name
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.ShippingAddress.State.Name)
                                                    </td>
                                                    <td>
                                                        @Model.Order.ShippingAddress.State.Name
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.ShippingAddress.City)
                                                    </td>
                                                    <td>
                                                        @Model.Order.ShippingAddress.City
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.ShippingAddress.AddressLine1)
                                                    </td>
                                                    <td>
                                                        @Model.Order.ShippingAddress.AddressLine1
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayNameFor(x=> x.Order.ShippingAddress.AddressLine2)
                                                    </td>
                                                    <td>
                                                        @Model.Order.ShippingAddress.AddressLine2
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-light shadow mt-3">
                    <div class="card-header border-0">
                        <h1 class="card-title text-md  text-lg font-weight-bold">

                            Order Items
                        </h1>
                        <div class="card-tools">
                            <button type="button" class="btn  btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus text-lg"></i>
                            </button>
                        </div>
                    </div>
                       <div class="card-body">
                 
                        <table class="table table-striped table-hover table-bordered">
                            
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().Thumbnail)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().ExternalProductId)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().Name)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().Sku)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().Quantity)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().UnitPrice)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.Items)
                                {
                                    <tr>
                                        <td>@item.Thumbnail</td>
                                        <td>@item.ExternalProductId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Sku</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.UnitPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>


                @if(Model.Order.Payment != null)
                {
                    <div class="card card-light shadow mt-3">
                        <div class="card-header border-0">
                            <h1 class="card-title text-md  text-lg font-weight-bold">
                                Payment Info
                            </h1>
                            <div class="card-tools">
                                <button type="button" class="btn  btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus text-lg"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Payment.Id" />
                          
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Payment.Id
                                    </div>
                                </div>
                            </div>




                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Payment.UserName" />
                  
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Payment.UserName
                                    </div>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Payment.PaymentGateway" />
                         
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Payment.PaymentGateway
                                    </div>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Payment.Status" />

                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Payment.Status
                                    </div>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Payment.CreatedAt" />
                       
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Payment.CreatedAt
                                    </div>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Payment.CapturedAt" />
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Payment.CapturedAt
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }


                @if(Model.Order.Shipment != null)
                {
                    <div class="card card-light shadow mt-3">
                        <div class="card-header border-0">
                            <h1 class="card-title text-md  text-lg font-weight-bold">
                                Payment Info
                            </h1>
                            <div class="card-tools">
                                <button type="button" class="btn  btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus text-lg"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Shipment.Id" />
                                        <div title="" data-toggle="tooltip" class="ui-icon-help d-inline ml-1  text-lightblue">
                                            <i class="fas fa-question-circle"></i>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Shipment.Id
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Shipment.OrderId" />
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Shipment.OrderId
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Shipment.UserId" />
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Shipment.UserId
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Shipment.SystemName" />
              
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Shipment.SystemName
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-3 clearfix">
                                    <div class="float-right">
                                        <micro-label asp-for="@Model.Order.Shipment.Status" />
                       
                                    </div>

                                </div>
                                <div class="col-md-9">
                                    <div class="form-text text-lg" style="padding-top: 2px">
                                        @Model.Order.Shipment.Status
                                    </div>

                            
                                    @if ((Model.Order.Shipment.Status == ShipmentStatus.Created))
                                    {

                                        <a asp-page="/Shipments/Fullfill" asp-route-shipmentId="@Model.Order.ShipmentId" class="btn btn-info">Fullfill</a>

                                    }else if((Model.Order.Shipment.Status == ShipmentStatus.Fullfilled)){
                                        <a asp-page="/Shipments/PurchaseLabel" asp-route-shipmentId="@Model.Order.ShipmentId" class="btn btn-info">Purshase label</a>
                                 }
                                </div>
                            </div>

                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


