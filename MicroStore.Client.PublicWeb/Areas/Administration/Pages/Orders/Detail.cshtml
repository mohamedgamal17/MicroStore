                                <div class="card">
                                    <div class="card-body">
                                        <table class="table table-hover text-lg  table-bordered">
                                            <thead>
                                                <tr>
                                                    <th colspan="2">
                                                        @Html.DisplayNameFor(x=> x.Order.ShippingAddress)
