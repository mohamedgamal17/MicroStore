                <div class="card card-light shadow mt-3">
                    <div class="card-header border-0">
                        <h1 class="card-title text-md  text-lg font-weight-bold">

                            Payment Items
                        </h1>
                        <div class="card-tools">
                            <button type="button" class="btn  btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus text-lg"></i>

                            </button>
                        </div>
                    </div>

                    <div class="card-body">


                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().Thumbnail)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().ExternalProductId)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().Name)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().Sku)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().Quantity)</th>
                                    <th>@Html.DisplayNameFor(x=> x.Order.Items.First().UnitPrice)</th>
                                </tr>
                            </thead>>
                            <tbody>
                                @foreach (var item in Model.Order.Items)
                                {
                                    <tr>
                                        <td>@item.Thumbnail</td>
                                        <td>@item.ExternalProductId</td>
                                        <td>@item.Sku</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.UnitPrice</td>
                                    </tr>
                                }
