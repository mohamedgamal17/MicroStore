@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Geographic.CountryModel
<div class="card">
    <div class="card-header">
        <p class="card-title text-lg "><i class="fas fa-info mr-1 text-lightblue"></i> Country Info</p>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </div>
    <div class="card-body">
        <div class="text-center mb-3">
            @Html.ValidationSummary()
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label class="col-form-label" asp-for="@Model.Name"></micro-label>                        
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.Name" id="name" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.Name" />
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label class="col-form-label" asp-for="@Model.TwoLetterIsoCode"> </micro-label>                    
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.TwoLetterIsoCode"  class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.TwoLetterIsoCode" />            
            </div>
        </div>

         <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label class="col-form-label" asp-for="@Model.ThreeLetterIsoCode"> </micro-label>                    
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.ThreeLetterIsoCode"  class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.ThreeLetterIsoCode" />            
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <micro-label class="col-form-label" asp-for="@Model.NumericIsoCode"> </micro-label>                    
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.NumericIsoCode"  class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.NumericIsoCode" />            
            </div>
        </div>
    </div>
</div>