@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Geographic.CountryListModel

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-6">
                    <h1 class="m-0">Orders</h1>
                </div>
                  <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-action="Create" class="btn btn-info">
                                <i class="fas fa-plus-square mr-1"></i>Create Country
                            </a>

                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <partial name="Grids/_Grids.Countries" model="Model" />
        </div>
    </section>
</div>



@section Scripts{
    <script>

        $(document).ready(function(){
            $("#countries-grid").DataTable({
                ajax : {
                    url:"",
                    type: "POST"
                },
                columns : [
                    { data :"name", name :"@(Html.DisplayNameFor(x=> x.Data.First().Name))" },
                    { data :"twoLetterIsoCode", name :"@(Html.DisplayNameFor(x=> x.Data.First().TwoLetterIsoCode))" },
                    { data :"threeLetterIsoCode", name :"@(Html.DisplayNameFor(x=> x.Data.First().ThreeLetterIsoCode))" },
                    { data :"numericIsoCode", name :"@(Html.DisplayNameFor(x=> x.Data.First().NumericIsoCode))" },
                    {
                        mRender :  function(data, type, row){
                            return `<a href="Country/Edit/${row.id}" class="btn btn-info">Edit</a>`
                        }
                    }                   
                ]
            });

     

        })
        
    </script>

}