@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Inventory.InventoryItemModel
<div class="card">
    <div class="card-header">
        <p class="card-title text-lg "><i class="fas fa-info mr-1 text-lightblue"></i> Category Info</p>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </div>
    <div class="card-body">
        <div class="text-center mb-3">
            @Html.ValidationSummary()
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                     <micro-label asp-for="@Model.Stock" ></micro-label>
                </div>
            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.Stock" id="@Html.IdFor(x=> x.Stock)" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.Stock" />          
            </div>
        </div>
    </div>
</div>