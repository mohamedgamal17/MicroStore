@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Catalog.Categories.CategoryModel
<div class="card">
    <div class="card-header">
        <p class="card-title text-lg "><i class="fas fa-info mr-1 text-lightblue"></i> Category Info</p>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </div>
    <div class="card-body">
        <div class="text-center mb-3">
            @Html.ValidationSummary()
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <label class="col-form-label"
                           asp-for="@Model.Name">Category Name <i class="fas fa-question-circle text-lightblue "></i></label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.Name" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.Name">
                </span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-3">
                <div class="float-sm-left float-md-right">
                    <label class="col-form-label"
                           asp-for="@Model.Description">Short description <i class="fas fa-question-circle text-lightblue "></i></label>
                </div>

            </div>
            <div class="col-sm-8">
                <input asp-for="@Model.Description" id="ShortDescription" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.Description">
                </span>
            </div>
        </div>
    </div>
</div>