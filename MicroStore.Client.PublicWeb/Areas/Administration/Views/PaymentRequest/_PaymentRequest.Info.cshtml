@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Billing.PaymentRequestVM
<div class="card ">
    <div class="card-body ">
        <div class="card card-light mb-3 shadow">
            <div class="card-header border-0">
                <h1 class="card-title text-md text-lg">
                    Payment Request Info
                </h1>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus text-lg"></i>

                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.Id" />
                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.Id
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.OrderId" />


                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.OrderId
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.OrderNumber" />
                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.OrderNumber
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.UserId" />
                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top:  2px">
                            @Model.UserId
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.TransctionId" />
                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.TransctionId
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.PaymentGateway" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.PaymentGateway
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.Status" />
                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.Status
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.Description" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.Description
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>