@using MicroStore.Client.PublicWeb.Areas.Administration.Navigation
@using MicroStore.ShoppingGateway.ClinetSdk.Common;
@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Shipments.ShipmentPackageModel

@{
    UIMenuNavigationManager.SetCurrentMenu(BackEndMenusStandard.Shipment.Fullfill);

}

<div>
    <form method="post" asp-action="Fullfill">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="@Model.Id" />
        <div class="content-header">
            <div class="container-fluid">
                <abp-row class="mb-2">
                    <abp-column size-sm=_6>
                        <h1 class="m-0">Fullfill Shipment - @Model.Id</h1>
                    </abp-column>

                    <abp-column size=_6>
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <button class="btn btn-info" type="submit">
                                    <i class='fas fa-save mr-1'></i>
                                    Save And Continue
                                </button>
                            </li>
                        </ol>
                    </abp-column>
                </abp-row>
            </div>
        </div>
        <div class="content">
            <div class="container-fluid">
                <abp-card>
                    <abp-card-header>
                        <abp-card-title class="text-lg"> <i class="fas fa-info mr-1 text-lightblue"></i> Package Info</abp-card-title>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus text-lg"></i>
                            </button>
                        </div>
                    </abp-card-header>
                    <abp-card-body>
                        <div class="text-center mb-3">
                            @Html.ValidationSummary()
                        </div>
                        <abp-row class="form-group mb-3">
                            <abp-column size-md=_3>
                                <micro-label asp-for="@Model.Weight"></micro-label>
                            </abp-column>
                            <abp-column size-md=_9>
                                <div class="input-group">
                                    <input asp-for="@Model.Weight.Value" type="number" class="form-control" placeholder="Value" />
                                    <select asp-for="@Model.Weight.Unit" asp-items="@Html.GetEnumSelectList<WeightUnit>()"
                                            class="form-control"></select>

                                    <span asp-validation-for="@Model.Weight.Value" class="invalid-feedback"></span>
                                    <span asp-validation-for="@Model.Weight.Unit" class="invalid-feedback"></span>
                                    <span asp-validation-for="@Model.Weight" class="invalid-feedback"></span>
                                </div>
                            </abp-column>
                        </abp-row>
                        <abp-row class="form-group mb-3">
                            <abp-column size-md=_3>
                                <micro-label asp-for="@Model.Dimension"></micro-label>
                            </abp-column>
                            <abp-column size-md=_9>
                                <div class="input-group">
                                    <input asp-for="@Model.Dimension.Length" type="number" class="form-control" placeholder="Lenght" />
                                    <input asp-for="@Model.Dimension.Width" type="number" class="form-control" placeholder="Width" />
                                    <input asp-for="@Model.Dimension.Height" type="number" class="form-control" placeholder="Height" />
                                    <select asp-for="@Model.Dimension.Unit" asp-items="@Html.GetEnumSelectList<DimensionUnit>()"
                                            class="form-control">
                                    </select>

                                    <span asp-validation-for="@Model.Dimension.Length" class="invalid-feedback"></span>
                                    <span asp-validation-for="@Model.Dimension.Width" class="invalid-feedback"></span>
                                    <span asp-validation-for="@Model.Dimension.Height" class="invalid-feedback"></span>
                                </div>
                            </abp-column>
                        </abp-row>
                    </abp-card-body>
                </abp-card>
            </div>
        </div>
    </form>
</div>
