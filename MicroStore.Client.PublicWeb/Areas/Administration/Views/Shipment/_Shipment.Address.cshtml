@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Shipments.ShipmentAggregateVM
<abp-card>
    <abp-card-header>
        <abp-card-title class="text-lg">
            <i class="fas fa-info mr-1 text-lightblue"></i> Shipping Address
        </abp-card-title>
        <div class="card-tools">
            <abp-button class="btn-tool" data-card-widget="collapse">  <i class="fas fa-minus text-lg"></i></abp-button>
        </div>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" border-style=Bordered>
            <thead>
                <tr>
                    <th colspan="2">
                        Shipping Address                    
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x=> x.Address.Name)
                    </td>
                    <td>
                        @Model.Address.Name
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayNameFor(x=> x.Address.Phone)
                    </td>
                    <td>
                        @Model.Address.Phone
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x=> x.Address.Country.Name)
                    </td>
                    <td>
                        @Model.Address.Country.Name
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x=> x.Address.State.Name)
                    </td>
                    <td>
                        @Model.Address.State.Name
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x=> x.Address.AddressLine1)
                    </td>
                    <td>
                        @Model.Address.AddressLine1
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x=> x.Address.AddressLine2)
                    </td>
                    <td>
                        @Model.Address.AddressLine2
                    </td>
                </tr>
            </tbody>
        </abp-table>
    </abp-card-body>
</abp-card>

