@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Shipments.ShipmentAggregateVM

<abp-card>
    <abp-card-header>
        <abp-card-title>
            <i class="fas fa-info mr-1 text-lightblue"></i> Shipment Items
            <div class="card-tools">
                <abp-button class="btn-tool" data-card-widget="collapse">  <i class="fas fa-minus text-lg"></i></abp-button>
            </div>
        </abp-card-title>
    </abp-card-header>
    <abp-card-body>
        <abp-table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Thumbnail)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Name)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Sku)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Quantity)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().UnitPrice)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Weight)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Dimension)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td><img src="@item.Thumbnail" style="width:150px ; height:150px;"></img></td>
                        <td>@item.Name</td>
                        <td>@item.Sku</td>
                        <td>@item.Quantity</td>
                        <td>$@item.UnitPrice</td>
                        <td>@item.Weight?.Value (@item.Weight?.Unit)</td>
                        <td>
                            Length  : @item.Dimension?.Length (@item.Dimension?.Unit) <br>
                            Width  : @item.Dimension?.Width (@item.Dimension?.Unit) <br>
                            Height  : @item.Dimension?.Height (@item.Dimension?.Unit) <br>
                        </td>
                    </tr>
                }
            </tbody>
        </abp-table>
    </abp-card-body>
</abp-card>
