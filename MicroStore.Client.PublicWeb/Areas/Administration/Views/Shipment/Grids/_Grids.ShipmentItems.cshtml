@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Shipments.ShipmentAggregateVM
<div class="card card-light shadow mt-3">
    <div class="card-header border-0">
        <h1 class="card-title text-md  text-lg font-weight-bold">

            Payment Items
        </h1>
        <div class="card-tools">
            <button type="button" class="btn  btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus text-lg"></i>

            </button>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Thumbnail)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().ProductId)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Name)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Sku)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Quantity)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().UnitPrice)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Weight)</th>
                    <th>@Html.DisplayNameFor(x=> x.Items.First().Dimension)</th>
                </tr>
            </thead>>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Thumbnail</td>
                        <td>@item.ProductId</td>
                        <td>@item.Sku</td>
                        <td>@item.Quantity</td>
                        <td>$@item.UnitPrice</td>
                        <td>@item.Weight?.Value (@item.Weight?.Unit)</td>
                        <td>
                            Lenght  : item.Dimension?.Lenght (@item.Dimension?.Unit) <br>
                            Width  : item.Dimension?.Lenght (@item.Dimension?.Unit) <br>
                            Height  : item.Dimension?.Lenght (@item.Dimension?.Unit) <br>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>