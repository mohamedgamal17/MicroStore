@using MicroStore.Client.PublicWeb.Areas.Administration.Models.Shipments;
@using MicroStore.ShoppingGateway.ClinetSdk.Entities.Shipping;
@model ShipmentSearchModel
@{
    var states = Enum.GetNames<ShipmentStatus>().Select(x => new SelectListItem { Text = x, Value = x });
    var countries = (List<SelectListItem>) ViewBag.Countries;

}
<abp-card>
    <form id="AdvancedSearchForm">
        <abp-card-header>
            <abp-card-title><i class="fas fa-search mr-2 text-lightblue"></i><span class="text-lg"> Search</span> </abp-card-title>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus text-lg"></i>
                </button>
            </div>
        </abp-card-header>
        <abp-card-body>
            <abp-row>
                <abp-column size-md="_6">
                    <abp-row class="form-group mb-3">
                        <abp-column size-sm="_4">
                            <div class="float-sm-left float-md-right">
                                <micro-label class="col-form-label" asp-for="@Model.StartDate"></micro-label>
                            </div>

                        </abp-column>
                        <abp-column size-sm="_8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                <input type="text" asp-for="@Model.StartDate" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="mm/dd/yyyy" data-mask="" inputmode="numeric">
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.StartDate" />
                        </abp-column>
                    </abp-row>
                    <abp-row class="form-group mb-3">
                        <abp-column size-sm="_4">
                            <div class="float-sm-left float-md-right">
                                <micro-label class="col-form-label" asp-for="@Model.EndDate"></micro-label>
                            </div>

                        </abp-column>
                        <abp-column size-sm="_8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                <input type="text" asp-for="@Model.EndDate" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="mm/dd/yyyy" data-mask="" inputmode="numeric">
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.EndDate" />
                        </abp-column>
                    </abp-row>
                    <abp-row class="form-group mb-3">
                        <abp-column size-sm="_4">
                            <div class="float-sm-left float-md-right">
                                <micro-label class="col-form-label" asp-for="@Model.Status"></micro-label>
                            </div>

                        </abp-column>
                        <abp-column size-sm="_8">
                            <select asp-for="@Model.Status" class="form-control" id="@Html.IdFor(x=> x.Status)" asp-items="@Html.GetEnumSelectList<ShipmentStatus>()">
                                <option selected value="">All</option>
                            </select>
                            <span class="text-danger" asp-validation-for="@Model.Status" />
                        </abp-column>
                    </abp-row>
                    <abp-row class="form-group mb-3">
                        <abp-column size-sm="_4">
                            <div class="float-sm-left float-md-right">
                                <micro-label class="col-form-label" asp-for="@Model.Country"></micro-label>
                            </div>

                        </abp-column>
                        <abp-column size-sm="_8">
                            <select asp-for="@Model.Country" class="form-control" id="@Html.IdFor(x=> x.Country)" asp-items="@countries">
                                <option selected value="">All</option>
                            </select>
                            <span class="text-danger" asp-validation-for="@Model.Country" />
                        </abp-column>
                    </abp-row>
                </abp-column>
                <abp-column size-md="_6">
                    <abp-row class="form-group mb-3">
                        <abp-column size-sm="_4">
                            <div class="float-sm-left float-md-right">
                                <micro-label class="col-form-label" asp-for="@Model.OrderNumber"></micro-label>
                            </div>

                        </abp-column>
                        <abp-column size-sm="_8">
                            <input asp-for="@Model.OrderNumber" id="@Html.IdFor(x=> x.OrderNumber)" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.OrderNumber" />
                        </abp-column>
                    </abp-row>
                    <abp-row class="form-group mb-3">
                        <abp-column size-sm="_4">
                            <div class="float-sm-left float-md-right">
                                <micro-label class="col-form-label" asp-for="@Model.TrackingNumber"></micro-label>
                            </div>

                        </abp-column>
                        <abp-column size-sm="_8">
                            <input asp-for="@Model.TrackingNumber" id="@Html.IdFor(x=> x.TrackingNumber)" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.TrackingNumber" />
                        </abp-column>
                    </abp-row>                
                </abp-column>
                <abp-column size-md="_12" class="mt-3">
                    <div class="text-center">
                        <abp-button type="submit" button-type="Info"><i class="fas fa-search mr-1 text-white"></i><span class=""> Search</span> </abp-button>
                    </div>
                </abp-column>

            </abp-row>
        </abp-card-body>
    </form>
</abp-card>