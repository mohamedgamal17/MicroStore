@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Shipments.ShipmentAggregateVM
<div class="card ">
    <div class="card-body ">
        <div class="card card-light mb-3 shadow">
            <div class="card-header border-0">
                <h1 class="card-title text-md
                                                text-lg">
                    Payment Request Info
                </h1>
