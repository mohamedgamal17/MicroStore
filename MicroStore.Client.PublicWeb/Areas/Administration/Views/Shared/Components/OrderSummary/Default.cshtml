@using MicroStore.Client.PublicWeb.Areas.Administration.Components
@model OrderSummaryComponentViewModel
<abp-card>
    <abp-card-header>
        <abp-card-title class="text-lg">
            <i class="fas fa-info mr-1 text-lightblue"></i> Order
        </abp-card-title>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus text-lg"></i>
            </button>
        </div>
    </abp-card-header>
    <abp-card-body>
        <abp-row class="form-group ">
            <abp-column size-sm=_4>
                <div class="float-left">
                      <micro-label  asp-for="@Model.Order.Id" text-size=Lg></micro-label>
                </div>
           
            </abp-column>
            <abp-column size-sm=_8>
                <div class="text-lg">
                    @Model.Order.Id
                </div>
            </abp-column>
        </abp-row>
        <abp-row class="form-group mb-3">
            <abp-column size-sm=_4>
                <micro-label  asp-for="@Model.Order.OrderNumber" text-size=Lg></micro-label>
            </abp-column>
            <abp-column size-sm=_8>
                <div class="text-lg">
                    @Model.Order.OrderNumber
                </div>
            </abp-column>
        </abp-row>
        <abp-row class="form-group mb-3">
            <abp-column size-sm=_4>
                <micro-label  asp-for="@Model.Order.TaxCost" text-size=Lg></micro-label>
            </abp-column>
            <abp-column size-sm=_8>
                <div class="text-lg">
                    @Model.Order.TaxCost
                </div>
            </abp-column>
        </abp-row>

        <abp-row class="form-group mb-3">
            <abp-column size-sm=_4>
                <micro-label asp-for="@Model.Order.ShippingCost" text-size=Lg></micro-label>
            </abp-column>
            <abp-column size-sm=_8>
                <div class="text-lg">
                    @Model.Order.ShippingCost
                </div>
            </abp-column>
        </abp-row>
        <abp-row class="form-group mb-3">
            <abp-column size-sm=_4>
                <micro-label asp-for="@Model.Order.SubTotal" text-size=Lg></micro-label>
            </abp-column>
            <abp-column size-sm=_8>
                <div class="text-lg">
                    @Model.Order.SubTotal
                </div>
            </abp-column>
        </abp-row>

        <abp-row class="form-group mb-3">
            <abp-column size-sm=_4>
                <micro-label  asp-for="@Model.Order.TotalPrice" text-size=Lg></micro-label>
            </abp-column>
            <abp-column size-sm=_8>
                <div class="text-lg">
                    @Model.Order.TotalPrice
                </div>
            </abp-column>
        </abp-row>
    </abp-card-body>
</abp-card>