@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Settings.ShipmentSettingsModel

@{
    var shippingSystems = (List<SelectListItem>)ViewBag.ShippingSystems;
    UIMenuNavigationManager.SetCurrentMenu(BackEndMenusStandard.Settings.Shipping);

}

<div>
    <form method="post" asp-action="Shipping">
        @Html.AntiForgeryToken()
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">
                            Shipping Settings
                        </h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <button class="btn btn-info" type="submit">
                                    <i class='fas fa-save mr-1'></i>
                                    Save
                                </button>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="container-fluid">

                <abp-card>
                    <abp-card-header>
                        <abp-card-title><i class="fas fa-info mr-1 text-lightblue"></i> Shipping System</abp-card-title>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
                        </div>
                    </abp-card-header>
                    <abp-card-body>

                        <div class="form-group row mb-3">
                            <div class="col-md-3">
                                <div class="float-sm-left float-md-right">
                                    <micro-label asp-for="@Model.DefaultShippingSystem"></micro-label>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <select class="form-select form-control" id="@Html.IdFor(x=> x.DefaultShippingSystem)" asp-for="@Model.DefaultShippingSystem">
                                    <option>Please select system</option>
                                    @foreach (var system in shippingSystems)
                                    {
                                        <option value="@system.Value">@system.Text</option>
                                    }
                                </select>
                                <span class="text-danger" asp-validation-for="@Model.DefaultShippingSystem">
                                </span>
                            </div>
                        </div>
                    </abp-card-body>
                </abp-card>
                <partial name="_Location" model="Model" />
            </div>
        </div>
    </form>

</div>