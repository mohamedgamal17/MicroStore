@using MicroStore.ShoppingGateway.ClinetSdk.Entities.Orderes;
@using MicroStore.ShoppingGateway.ClinetSdk.Entities.Shipping;
@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Ordering.OrderAggregateVM
@{
    string orderStateBadge = string.Empty;

    switch (Model.CurrentState)
    {
        case OrderState.Completed:
            orderStateBadge = "bg-success";
            break;
        case OrderState.Cancelled:
            orderStateBadge = "bg-error";
            break;
        default:
            orderStateBadge = "bg-info";
            break;
    }



}
<div class="card ">
    <div class="card-body ">
        <div class="card card-light mb-3 shadow">
            <div class="card-header border-0">
                <h1 class="card-title text-md text-lg ">

                    Order Info
                </h1>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus text-lg"></i>

                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.Id" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.Id
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.OrderNumber" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.OrderNumber
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.UserId" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.UserId
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.TaxCost" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.TaxCost
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.ShippingCost" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.ShippingCost
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.SubTotal" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.SubTotal
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.TotalPrice" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="form-text text-lg" style="padding-top: 2px">
                            @Model.TotalPrice
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 clearfix">
                        <div class="float-right">
                            <micro-label asp-for="@Model.CurrentState" />

                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="input-group input-group-short">
                            <div class="input-group-text text-md align-items-start bg-info">
                                @Model.CurrentState
                            </div>

                            <div class="input-group-btn ml-2">
                                @if (Model.CurrentState != OrderState.Cancelled)
                                {
                                    <abp-button button-type=Danger text="Cancel"></abp-button>
                                }

                                @if(Model.CurrentState == OrderState.Fullfilled)
                                {
                                    <abp-button button-type=Danger text="Complete"></abp-button>
                                }
                            </div>




                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
