@using MicroStore.ShoppingGateway.ClinetSdk.Entities.Orderes;
@using MicroStore.ShoppingGateway.ClinetSdk.Entities.Shipping;
@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Ordering.OrderAggregateVM
@if (Model.Payment != null)
{

    <abp-card>
        <abp-card-header>
            <abp-card-title>
                <i class="fas fa-info mr-1 text-lightblue"></i> Payment Info
            </abp-card-title>
            <div class="card-tools">
                <button type="button" class="btn  btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus text-lg"></i>
                </button>
            </div>
        </abp-card-header>
        <abp-card-body>
            <abp-row class="form-group mb-2">
                <abp-column size-sm=_3 class="text-right">
                    <micro-label asp-for="@Model.Payment.Id" />
                </abp-column>
                <abp-column>
                    @Model.Payment.Id
                </abp-column>
            </abp-row>

            <abp-row class="form-group mb-2">
                <abp-column size-sm=_3 class="text-right">
                    <micro-label asp-for="@Model.Payment.UserId" />
                </abp-column>
                <abp-column>
                    @Model.Payment.UserId
                </abp-column>
            </abp-row>
            <abp-row class="form-group mb-2">
                <abp-column size-sm=_3 class="text-right">
                    <micro-label asp-for="@Model.Payment.PaymentGateway" />
                </abp-column>
                <abp-column>
                    @Model.Payment.PaymentGateway
                </abp-column>
            </abp-row>
            <abp-row class="form-group mb-2">
                <abp-column size-sm=_3 class="text-right">
                    <micro-label asp-for="@Model.Payment.Status" />
                </abp-column>
                <abp-column>
                    @Model.Payment.Status
                </abp-column>
            </abp-row>
            <abp-row class="form-group mb-2">
                <abp-column size-sm=_3 class="text-right">
                    <micro-label asp-for="@Model.Payment.CreatedAt" />
                </abp-column>
                <abp-column>
                    @Model.Payment.CreatedAt
                </abp-column>
            </abp-row>
            <abp-row class="form-group mb-2">
                <abp-column size-sm=_3 class="text-right">
                    <micro-label asp-for="@Model.Payment.CapturedAt" />
                </abp-column>
                <abp-column>
                    @Model.Payment.CapturedAt
                </abp-column>
            </abp-row>
        </abp-card-body>
    </abp-card>
}
