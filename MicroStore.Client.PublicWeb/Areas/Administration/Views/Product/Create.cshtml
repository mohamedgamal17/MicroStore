@using MicroStore.Client.PublicWeb.Areas.Administration.Navigation
@using MicroStore.ShoppingGateway.ClinetSdk.Common;
@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Catalog.Products.ProductModel

@{
    UIMenuNavigationManager.SetCurrentMenu(BackEndMenusStandard.ProductMenus.Create);
}

<div class="content-wrapper mr-2">
    <!-- Content Header (Page header) -->
    <form method="post" asp-action="Create" >
        @Html.AntiForgeryToken()
     
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">
                            Edit product details - {@Model.Name}
                        </h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <button class="btn btn-info" type="submit">
                                    <i class="fas
                                fa-plus-square mr-1"></i> Save
                                </button>
                            </li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <div class="content">
            <div class="container-fluid">

                <partial name="_CreateOrUpdate.Info" model="Model" />
                <partial name="_CreateOrUpdate.Price"  model="Model" />
                <partial name="_CreateOrUpdate.Shipping" model="Model" />

            </div>
        </div>
    </form>

</div>

@section Scripts{
    <script src="~/js/BackEnd/Product/create.js"></script>
}