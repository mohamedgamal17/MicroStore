@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Catalog.Products.ProductModel


<abp-card>
    <abp-card-header>
        <abp-card-title class="text-lg"><i class="fas fa-info mr-1 text-lightblue"></i> Prices</abp-card-title>
                <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </abp-card-header>
    <abp-card-body>
           <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.Price"></micro-label>
                </div>
            </div>
            <div class="col-md-9">
                <div class="input-group">
                    <input asp-for="@Model.Price" type="number" class="form-control" placeholder="Value" />
                </div>


            </div>

        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.OldPrice"></micro-label>
                </div>
            </div>
            <div class="col-md-9">
                <div class="input-group">
                    <input asp-for="@Model.OldPrice" type="number" class="form-control" placeholder="Value" />
                </div>


            </div>

        </div>
    </abp-card-body>
</abp-card>

