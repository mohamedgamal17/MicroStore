@using MicroStore.Client.PublicWeb.Areas.Administration.Models.Catalog.Products
@model ProductSearchModel

@{
    var categories= (List<SelectListItem>) ViewBag.Categories;
    var manufacturers = (List<SelectListItem>)ViewBag.Manufacturers;
}
<abp-card>
    <form id="AdvancedSearchForm">
        <abp-card-header>
            <abp-card-title><i class="fas fa-search mr-2 text-lightblue"></i><span class="text-lg"> Search</span> </abp-card-title>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus text-lg"></i>
                </button>
            </div>
        </abp-card-header>
        <abp-card-body>
            <abp-row>
                <abp-column size-md="_6">
                    <abp-row>

                        <abp-column size-md="_12">
                            <abp-row class="form-group mb-3">
                                <abp-column size-sm="_4">
                                    <div class="float-sm-left float-md-right">
                                        <micro-label class="col-form-label" asp-for="@Model.Name"></micro-label>
                                    </div>

                                </abp-column>
                                <abp-column size-sm="_8">
                                    <input asp-for="@Model.Name" id="@Html.IdFor(x=> x.Name)" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.Name" />
                                </abp-column>
                            </abp-row>
                        </abp-column>

                        <abp-column size-md="_12">
                            <abp-row class="form-group mb-3">
                                <abp-column size-sm="_4">
                                    <div class="float-sm-left float-md-right">
                                        <micro-label class="col-form-label" asp-for="@Model.Category"></micro-label>
                                    </div>

                                </abp-column>
                                <abp-column size-sm="_8">
                                    <select asp-for="@Model.Category" id="@Html.IdFor(x=> x.Category)" class="form-control" asp-items="categories">
                                        <option selected value="">All</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="@Model.Name" />
                                </abp-column>
                            </abp-row>
                        </abp-column>
                        <abp-column size-md="_12">
                            <abp-row class="form-group mb-3">
                                <abp-column size-sm="_4">
                                    <div class="float-sm-left float-md-right">
                                        <micro-label class="col-form-label" asp-for="@Model.Manufacturer"></micro-label>
                                    </div>

                                </abp-column>
                                <abp-column size-sm="_8">
                                    <select asp-for="@Model.Manufacturer" id="@Html.IdFor(x=> x.Manufacturer)" class="form-control" asp-items="manufacturers">
                                        <option selected value="">All</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="@Model.Manufacturer" />
                                </abp-column>
                            </abp-row>
                        </abp-column>
                    </abp-row>
                </abp-column>
                <abp-column size-md="_6">
                    <abp-row>
                        <abp-column size-md="_12">
                            <abp-row class="form-group mb-3">
                                <abp-column size-sm="_4">
                                    <div class="float-sm-left float-md-right">
                                        <micro-label class="col-form-label" asp-for="@Model.MinPrice"></micro-label>
                                    </div>

                                </abp-column>
                                <abp-column size-sm="_8">
                                    <input asp-for="@Model.MinPrice" id="@Html.IdFor(x=> x.MinPrice)" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.MinPrice" />
                                </abp-column>
                            </abp-row>
                        </abp-column>
                        <abp-column size-md="_12">
                            <abp-row class="form-group mb-3">
                                <abp-column size-sm="_4">
                                    <div class="float-sm-left float-md-right">
                                        <micro-label class="col-form-label" asp-for="@Model.MaxPrice"></micro-label>
                                    </div>

                                </abp-column>
                                <abp-column size-sm="_8">
                                    <input asp-for="@Model.MaxPrice" id="@Html.IdFor(x=> x.MaxPrice)" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.MaxPrice" />
                                </abp-column>
                            </abp-row>
                        </abp-column>
                    </abp-row>
                </abp-column>

                <abp-column size-md="_12" class="mt-3">
                    <div class="text-center">
                        <abp-button type="submit" button-type="Info"><i class="fas fa-search mr-1 text-white"></i><span class=""> Search</span> </abp-button>
                    </div>
                </abp-column>

            </abp-row>
        </abp-card-body>
    </form>
</abp-card>