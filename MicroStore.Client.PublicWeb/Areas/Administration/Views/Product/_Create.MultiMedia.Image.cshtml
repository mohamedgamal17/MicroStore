@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Catalog.Products.CreateProductImageModel
<form asp-action="CreateProductImage">
    <abp-modal>
        <abp-modal-header title="Add Product Image"></abp-modal-header>
        <abp-modal-body>

            @Html.AntiForgeryToken()
            @Html.HiddenFor(x=> x.ProductId)
            <abp-input  asp-for="@Model.Image"></abp-input>
            <abp-input asp-for="@Model.DisplayOrder"></abp-input>

        </abp-modal-body>
        <abp-modal-footer buttons="@AbpModalButtons.Save | @AbpModalButtons.Cancel"></abp-modal-footer>
    </abp-modal>
</form>