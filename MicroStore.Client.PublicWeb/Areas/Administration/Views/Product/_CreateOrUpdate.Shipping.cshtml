@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Catalog.Products.ProductModel
@using MicroStore.ShoppingGateway.ClinetSdk.Common


<abp-card>
    <abp-card-header>
        <abp-card-title><p class="card-title text-lg "><i class="fas fa-info mr-1 text-lightblue"></i> Shipping Info</p></abp-card-title>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </abp-card-header>
    <abp-card-body>
        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.Weight"></micro-label>
                </div>
            </div>
            <div class="col-md-9 row">
                <div class="col-sm-12">
                    <div class="input-group">
                        <input asp-for="@Model.Weight.Value" type="number" class="form-control" placeholder="Value" />
                        <select asp-for="@Model.Weight.Unit" asp-items="@(Html.GetEnumSelectList<WeightUnit>())" 
                            class="form-control"></select>

                    </div>
                </div>
                <div class="col-sm-12 row">
                    <span asp-validation-for="@Model.Weight.Value" class="invalid-feedback d-inline"></span>
                    <span asp-validation-for="@Model.Weight.Unit" class="invalid-feedback d-inline"></span>

                </div>


            </div>

        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.Dimensions"></micro-label>
                </div>
            </div>

            <div class="col-md-9 row">
                <div class="col-sm-12 input-group">
                    <input asp-for="@Model.Dimensions.Length" type="number" class="form-control" placeholder="Lenght" />
                    <input asp-for="@Model.Dimensions.Width" type="number" class="form-control" placeholder="Width" />
                    <input asp-for="@Model.Dimensions.Height" type="number" class="form-control" placeholder="Height" />
                    <select asp-for="@Model.Dimensions.Unit" asp-items="@(Html.GetEnumSelectList<DimensionUnit>())"                             class="form-control"></select>
                </div>

                <div class="col-sm-12 row">
                    <span asp-validation-for="@Model.Dimensions.Length" class="invalid-feedback  d-inline"></span>
                    <span asp-validation-for="@Model.Dimensions.Width" class="invalid-feedback  d-inline"></span>
                    <span asp-validation-for="@Model.Dimensions.Height" class="invalid-feedback  d-inline"></span>

                </div>
            </div>
        </div>
    </abp-card-body>
</abp-card>
