@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Catalog.Products.ProductModel
@using MicroStore.ShoppingGateway.ClinetSdk.Common

<div class="card clearfixt">
    <div class="card-header">
        <p class="card-title text-lg "><i class="fas fa-info mr-1 text-lightblue"></i> Shipping Info</p>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </div>

    <div class="card-body">

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.Weight"></micro-label>
                </div>
            </div>
            <div class="col-md-9">
                <div class="input-group">
                    <input asp-for="@Model.Weight.Value" type="number" class="form-control" placeholder="Value" />
                    <select asp-for="@Model.Weight.Unit" asp-items="@(Html.GetEnumSelectList<WeightUnit>())" class="form-control"></select>
                    <span asp-validation-for="@Model.Weight.Value" class="invalid-feedback"></span>
                    <span asp-validation-for="@Model.Weight.Unit" class="invalid-feedback"></span>
                    <span asp-validation-for="@Model.Weight" class="invalid-feedback"></span>
                </div>


            </div>

        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.Dimensions"></micro-label>
                </div>
            </div>

            <div class="col-md-9">
                <div class="input-group">
                    <input asp-for="@Model.Dimensions.Length" type="number" class="form-control" placeholder="Lenght" />
                    <input asp-for="@Model.Dimensions.Width" type="number" class="form-control" placeholder="Width" />
                    <input asp-for="@Model.Dimensions.Height" type="number" class="form-control" placeholder="Height" />
                                             <select asp-for="@Model.Dimensions.Unit" asp-items="@(Html.GetEnumSelectList<DimensionUnit>())" class="form-control"></select>

                    <span asp-validation-for="@Model.Dimensions.Length" class="invalid-feedback"></span>
                    <span asp-validation-for="@Model.Dimensions.Width" class="invalid-feedback"></span>
                    <span asp-validation-for="@Model.Dimensions.Height" class="invalid-feedback"></span>
                </div>
            </div>


        </div>
    </div>
</div>