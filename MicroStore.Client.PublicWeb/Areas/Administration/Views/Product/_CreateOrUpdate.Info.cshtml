@model MicroStore.Client.PublicWeb.Areas.Administration.Models.Catalog.Products.ProductModel

@{
    List<SelectListItem>? categories = ViewBag.Categories as List<SelectListItem>;

    List<SelectListItem>? manufacturers = ViewBag.Manufacturers as List<SelectListItem>;
}

<abp-card>
    <abp-card-header>
        <abp-card-title class="text-lg"><i class="fas fa-info mr-1 text-lightblue"></i> Product Info</abp-card-title>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
        </div>
    </abp-card-header>
    <abp-card-body>
        <div class="text-center mb-3">
            @Html.ValidationSummary()
        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">


                    <micro-label class="col-form-label"
                                 asp-for="@Model.Name" />

                </div>

            </div>
            <div class="col-md-9">
                <input asp-for="@Model.Name" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.Name">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.Sku"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <input asp-for="@Model.Sku" id="name" class="form-control" />

                <span class="text-danger" asp-validation-for="@Model.Name">
                </span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div style="float: right!important;">
                    <micro-label asp-for="@Model.CategoriesIds"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <select class="form-control" id="CategorySelect" multiple asp-for="@Model.CategoriesIds" asp-items="categories"></select>
                <span class="text-danger" asp-validation-for="@Model.CategoriesIds">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div style="float: right!important;">
                    <micro-label asp-for="@Model.ManufacturersIds"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <select class="form-control" id="ManufacturerSelect" multiple asp-for="@Model.ManufacturersIds" asp-items="manufacturers"></select>
                <span class="text-danger" asp-validation-for="@Model.ManufacturersIds">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div style="float:
                                                right!important;">
                    <micro-label asp-for="@Model.IsFeatured"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <input asp-for="@Model.IsFeatured" id="name" class="check-box" />

                <span class="text-danger" asp-validation-for="@Model.Name">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">
                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.ShortDescription"></micro-label>
                </div>

            </div>
            <div class="col-md-9">
                <textarea asp-for="@Model.ShortDescription" id="@Model.ShortDescription" class="form-control" rows="4"></textarea>
                <span class="text-danger" asp-validation-for="@Model.ShortDescription">
                </span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-md-3">

                <div class="float-sm-left float-md-right">
                    <micro-label asp-for="@Model.LongDescription"></micro-label>
                </div>


            </div>
            <div class="col-md-9">
                <textarea id="#long-description" class="summernote" rows="4" asp-for="@Model.LongDescription"> </textarea>

                <span class="text-danger" asp-validation-for="@Model.ShortDescription">
                </span>
            </div>
        </div>
    </abp-card-body>
</abp-card>

