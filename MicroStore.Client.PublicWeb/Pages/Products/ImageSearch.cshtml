@page 
@using MicroStore.Client.PublicWeb.Components.ProductImageSearchWidget;
@model MicroStore.Client.PublicWeb.Pages.Products.ImageSearchModel
@{
    ViewData["Title"] = "Image Search";
    ViewData["BreadCrumb.IsMainPage"] = false;
    ViewData["BreadCrumb.Title"] = "Image Search Page";
    ViewData["BreadCrumb.Page"] = "Image Search";
}
<section class="section-b-space addtocart_count ratio_asos">
    <div class="collection-wrapper">
        <div class="container">

            @if (Model.HasErorr)
            {
                @Html.ValidationSummary("Invalid input", new { @class = "text-danger" })
            }
            else
            {
                <div class="row">
                    <div class="col-md-3">
                        <img class="" src="@Model.ImageLink" style="max-width:300px;max-height:300px" />
                    </div>

                    <div class="col-md-9">
                        <div class="collection-content col">
                            <div class="page-main-content">
                                <div class="row">
                                    <div class="col-sm-12">

                                        @await Component.InvokeAsync(typeof(ProductImageSearchWidgetViewComponent), new { image = Model.TargetImage })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

