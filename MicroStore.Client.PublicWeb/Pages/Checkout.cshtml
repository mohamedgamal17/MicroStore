@page
@using MicroStore.Client.PublicWeb.Components.CheckoutInformation
@using MicroStore.Client.PublicWeb.Components.CheckoutSummary
@model CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<section class="section-b-space">
    <div class="container">
        <div class="checkout-page">
            <div class="checkout-form">
                <form method="post">
                    <abp-row>
                        <abp-column size-md="_6" size-sm="_12">
                            @await Component.InvokeAsync(typeof(CheckoutInformationWidgetViewComponent), Model)
                        </abp-column>      
                        <abp-column size-md="_6" size-sm="_12">
                            @await Component.InvokeAsync(typeof(CheckoutSummaryWidgetViewComponent),Model)
                        </abp-column>
                    </abp-row>
                </form>
            </div>
        </div>
    </div>
</section>

