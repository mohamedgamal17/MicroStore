<header>
    <div class="mobile-fix-option"></div>
    <div class="top-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="header-contact">
                        <ul>
                            <li>Welcome to Micro store</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 text-end">
                    <ul class="header-dropdown">
                        <li class="onhover-dropdown mobile-account">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            My Account
                            <ul class="onhover-show-div">
                                @if (User.Identity?.IsAuthenticated ?? false)
                                {
                                    <li><a asp-page="/Profile/Index">Profile</a></li>
                                    <li><a href="javascript:void(0)" id="btn-logout">Logout</a></li>
                                    <form method="post" asp-controller="Authentication" asp-action="Logout" id="logout-form">
                                        @Html.AntiForgeryToken()
                                    </form>
                                }
                                else
                                {
                                    <li><a asp-controller="Authentication" asp-action="Login">Login</a></li>
                                }

                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="main-menu">
                    <div class="menu-left">
                        <div class="navbar">
                            <a href="javascript:void(0)" onclick="openNav()">
                                <div class="bar-style">
                                    <i class="fa fa-bars sidebar-bar" aria-hidden="true"></i>
                                </div>
                            </a>
                        </div>
                        <div class="brand-logo">
                            <a href="index.html">
                                <img src="/frontend/images/icon/logo.png" class="img-fluid blur-up lazyload" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="menu-right pull-right">
                        <div class="icon-nav">
                            <ul>
                                <li class="onhover-div mobile-search">
                                    <div>
                                        <img src="/frontend/images/icon/search.png" onclick="openSearch()"
                                             class="img-fluid blur-up lazyload" alt=""> <i class="ti-search"
                                                                                           onclick="openSearch()"></i>
                                    </div>
                                    <div id="search-overlay" class="search-overlay">
                                        <div>
                                            <span class="closebtn" onclick="closeSearch()"
                                                  title="Close Overlay">×</span>
                                            <div class="overlay-content">
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-xl-12">
                                                            <form>
                                                                <div class="form-group">
                                                                    <input type="text" class="form-control"
                                                                           id="exampleInputPassword1"
                                                                           placeholder="Search a Product">
                                                                </div>
                                                                <button type="submit" class="btn btn-primary d-none" style="right: 45px!important">
                                                                    <i class="fa fa-search"></i>
                                                                </button>
                                                            </form>
                                                            <form  action="/ImageSearch" enctype="multipart/form-data"  
                                                            id="image-search" method="post">
                                                            @Html.AntiForgeryToken()
                                                                <button id="image-search-btn" class="btn btn-primary mr-3"
                                                                        style="display: block!important;
                                                                                position: absolute;
                                                                                top: 5px;
                                                                                background-color: transparent;
                                                                                border: 0;
                                                                                font-size: 24px;
                                                                            color: #777;
                                                                            "  type="button">
                                                                    <i class="fa fa-camera " style="display: block!important;"></i>
                                                                </button>
                                                                <input type="file" name="Image" id="image-search-input" class="d-none">
                                                            </form>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="onhover-div mobile-cart">
                                    <div href="javascript:void(0)" onclick="openCart()">
                                        <img src="/frontend/images/icon/cart.png"
                                             class="img-fluid blur-up lazyload" alt="">
                                        <i class="ti-shopping-cart"></i>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>