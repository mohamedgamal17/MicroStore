{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/orders/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7226
        }
      ],

      "UpstreamPathTemplate": "/mvcgateway/orders/{everything}",

      "UpstreamHttpMethod": [ "Get", "Post", "PUT", "DELETE", "PATCH" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },

    {
      "DownstreamPathTemplate": "/api/user/orders/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7226
        }

      ],

      "UpstreamPathTemplate": "/mvcgateway/orders/user/{everything}",

      "UpstreamHttpMethod": [ "GET" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "mvcgateway.ordering.order.read" ]
      }
    },

    {
      "DownstreamPathTemplate": "/api/user/orders/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7226
        }

      ],

      "UpstreamPathTemplate": "/mvcgateway/orders/user/{everything}",

      "UpstreamHttpMethod": [ "POST", "PUT", "DELETE", "PATCH" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "mvcgateway.ordering.order.write" ]
      }
    } 

  ]
}