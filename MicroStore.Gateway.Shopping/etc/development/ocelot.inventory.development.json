{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/inventory/uesr/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7054
        }
      ],

      "UpstreamHttpMethod": [ "GET" ],
      "UpstreamPathTemplate": "/mvcgateway/inventor/user/{everything}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "mvcgateway.inventory.read" ]
      },
      "DelegatingHandlers": [
        "DefaultTokenExchangeDelegatingHandler"
      ]
    },

    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7054
        }
      ],

      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "PATCH", "DELETE" ],
      "UpstreamPathTemplate": "/mvcgateway/inventory/{everything}",
      "DelegatingHandlers": [
        "DefaultTokenExchangeDelegatingHandler"
      ]
    } 
  ]
}