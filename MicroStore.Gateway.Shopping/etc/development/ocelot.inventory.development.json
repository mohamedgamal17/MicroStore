{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/inventory/products/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7054
        }
      ],

      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "PATCH", "DELETE" ],
      "UpstreamPathTemplate": "/mvcgateway/inventory/products/{everything}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },


    {
      "DownstreamPathTemplate": "/api/inventory/orders/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7054
        }
      ],

      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "PATCH", "DELETE" ],
      "UpstreamPathTemplate": "/mvcgateway/inventory/orders/{everything}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },

    {
      "DownstreamPathTemplate": "/api/inventory/uesr/orders/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7054
        }
      ],

      "UpstreamHttpMethod": [ "GET" ],
      "UpstreamPathTemplate": "/mvcgateway/inventor/user/orders/{everything}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "mvcgateway.inventory.order.read" ]
      },
      "DelegatingHandlers": [
        "InventoryTokenExchangeDelegatingHandler"
      ]
    }   
  ]
}