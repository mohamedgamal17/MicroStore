@model EditRoleModel
@{
    ViewData["Title"] = "Edit Role / BackEnd";
    UIMenuNavigationManager.SetCurrentMenu(IdentityMenuStandard.RoleMenu.Index);
}
<div class="content-wrapper mr-2">
    <form method="post" asp-action="Edit">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x=> x.Id)
        <div class="content-header">
            <div class="container-fluid">
                <abp-row class="mb-2">
                    <abp-column size-sm="_6">
                        <h1 class="m-0">Edit Role - @Model.Name</h1>
                    </abp-column>
                    <abp-column size-sm="_6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <abp-button button-type="Info" class="btn btn-info" type="submit">
                                    <i class="fas fa-plus-square mr-1"></i> Save                                
                                </abp-button>
                            </li>
                        </ol>
                    </abp-column>
                </abp-row>
            </div>
        </div>
        <div class="content">
            <div class="container-fluid">
                <div class="mb-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                @{
                    await Html.RenderPartialAsync("_CreateOrUpdate.Role", Model);
                }

            </div>
        </div>
    </form>

</div>