@model IdentityProvider.Identity.Web.Areas.BackEnd.Models.Users.UserSearchModel
@{
    var roles = (List<SelectListItem>)ViewBag.Roles;
}
<abp-card>
    <form id="AdvancedSearchForm">
        <abp-card-header>
            <abp-card-title><i class="fas fa-search mr-2 text-lightblue"></i><span class="text-lg"> Search</span> </abp-card-title>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus text-lg"></i></button>
            </div>
        </abp-card-header>
        <abp-card-body>
            <abp-row>
                <abp-column size-md="_6" class="align-self-center">
                    <abp-row class="form-group mb-3">
                        <abp-column size-sm="_4">
                            <div class="float-sm-left float-md-right">
                                <micro-label class="col-form-label" asp-for="@Model.Role"></micro-label>
                            </div>

                        </abp-column>
                        <abp-column size-sm="_8">
                            <select asp-for="Role" class="form-control" asp-items="roles" id="@Html.IdFor(x=> x.Role)">
                                <option value="" selected>Select Role</option>
                            </select>
                            <span class="text-danger" asp-validation-for="@Model.Role" />
                        </abp-column>
                    </abp-row>
                </abp-column>
                <abp-column size-md="_6" class="align-self-center">
                    <abp-row class="form-group mb-3">
                        <abp-column size-sm="_4">
                            <div class="float-sm-left float-md-right">
                                <micro-label class="col-form-label" asp-for="@Model.UserName"></micro-label>
                            </div>

                        </abp-column>
                        <abp-column size-sm="_8">
                            <input asp-for="@Model.UserName" id="@Html.IdFor(x=> x.UserName)" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.UserName" />
                        </abp-column>
                    </abp-row>
                </abp-column>

                <abp-column size-md="_12" class="mt-3">
                    <div class="text-center">
                        <abp-button type="submit" button-type="Info"><i class="fas fa-search mr-1 text-white"></i><span class=""> Search</span> </abp-button>
                    </div>
                </abp-column>

            </abp-row>
        </abp-card-body>
    </form>
</abp-card>
